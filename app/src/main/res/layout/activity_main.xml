<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/nen2"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvDangnhap"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:foregroundGravity="center"
        android:gravity="center"
        android:shadowDy="1"
        android:text="ĐĂNG NHẬP"
        android:textColor="#403636"
        android:textSize="40dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edUser"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/tvDangnhap"
        android:layout_marginTop="30dp"

        android:hint="Tên Đăng Nhập" />

    <EditText
        android:id="@+id/edPassworl"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/edUser"
        android:layout_marginTop="30dp"
        android:hint="Mật Khẩu"
        android:inputType="textPassword" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:orientation="horizontal">

        <Button

            android:id="@+id/btnSingup"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:layout_marginLeft="7dp"
            android:layout_weight="1"
            android:text="Đăng Ký"
            android:background="@drawable/nen"
            android:textColor="#ECE7E4"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btnLongin"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:layout_marginLeft="7dp"
            android:layout_weight="1"
            android:text="Đăng Nhập"
            android:background="@drawable/nen"
            android:textColor="#ECE7E4"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btnExit"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:layout_marginLeft="7dp"
            android:layout_weight="1"
            android:text="Thoát"
            android:background="@drawable/nen"
            android:textColor="#ECE7E4"
            android:textSize="20dp" />

    </LinearLayout>

</LinearLayout>